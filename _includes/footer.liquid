{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      <div class="footer-contact">
        {% if site.email %}
          <a href="mailto:{{ site.email | encode_email }}">Email</a>
        {% endif %}
        {% if site.scholar_userid %}
          <a href="https://scholar.google.com/citations?user={{ site.scholar_userid }}">Scholar</a>
        {% endif %}
        {% if site.x_username %}
          <a href="https://twitter.com/{{ site.x_username }}">Twitter</a>
        {% endif %}
        {% if site.github_username %}
          <a href="https://github.com/{{ site.github_username }}">Github</a>
        {% endif %}
        {% if site.linkedin_username %}
          <a href="https://www.linkedin.com/in/{{ site.linkedin_username }}">LinkedIn</a>
        {% endif %}
      </div>
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    <div class="container">
      <div class="footer-contact">
        {% if site.email %}
          <a href="mailto:{{ site.email | encode_email }}">Email</a>
        {% endif %}
        {% if site.scholar_userid %}
          <a href="https://scholar.google.com/citations?user={{ site.scholar_userid }}">Scholar</a>
        {% endif %}
        {% if site.x_username %}
          <a href="https://twitter.com/{{ site.x_username }}">Twitter</a>
        {% endif %}
        {% if site.github_username %}
          <a href="https://github.com/{{ site.github_username }}">Github</a>
        {% endif %}
        {% if site.linkedin_username %}
          <a href="https://www.linkedin.com/in/{{ site.linkedin_username }}">LinkedIn</a>
        {% endif %}
      </div>
    </div>
  </footer>
{% endif %}
